{
  "extends": "@mossop/config/web-ts/tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "strict": true
  },

  "include": [
    ".*.js",
    "*.js",
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": [
    "node_modules",
  ]
}
